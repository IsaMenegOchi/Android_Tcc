<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil.PhotoRegisterActivity"
    android:background="@color/background_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >



        <ImageView
            android:id="@+id/ivPhotoRegister_Cover"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingEnd="300dp"
            android:paddingTop="20dp"
            android:paddingBottom="70dp"
            android:background="@color/background_tertiary"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_outline_add_a_photo"
            android:visibility="invisible"
           />

        <ImageView
            android:id="@+id/ivPhotoRegister_Perfil"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="84dp"
            android:padding="35dp"
            android:background="@drawable/perfil_photo_shape"
            android:src="@drawable/ic_outline_add_a_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvPhotoRegister_Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40sp"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:text="Selecione uma foto para o seu perfil"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPhotoRegister_Perfil" />


        <EditText
            android:id="@+id/etPhotoRegister_Description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:hint="Escreva aqui sua bio..."
            android:textColorHint="@color/text_color"
            android:inputType="text"
            android:visibility="invisible"
            android:padding="10dp"
            android:textColor="@color/text_color"
            app:layout_constraintTop_toBottomOf="@+id/tvPhotoRegister_Order"
            tools:layout_editor_absoluteX="40dp" />

        <Button
            android:id="@+id/btnPhotoRegister_Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_gradient"
            android:text="Adicionar foto"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/etPhotoRegister_Description"
            app:layout_constraintStart_toStartOf="@+id/etPhotoRegister_Description"
            app:layout_constraintTop_toBottomOf="@+id/etPhotoRegister_Description" />

        <TextView
            android:id="@+id/tvPhotoRegister_Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.02"
            android:text="Pular etapa"
            android:textColor="@color/purple_quaternary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btnPhotoRegister_Add"
            app:layout_constraintStart_toStartOf="@+id/btnPhotoRegister_Add"
            app:layout_constraintTop_toBottomOf="@+id/btnPhotoRegister_Add" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>