<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.adm.VerifyCardActivity"
    android:background="@color/background_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:paddingBottom="40dp"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_logo_text" />

        <TextView
            android:id="@+id/tvVerificationSolicitation_Title"
            style="@style/textViewTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Solicitações de Verificação"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            />

        <TextView
            android:id="@+id/tvVerifyCard"
            android:layout_width="300dp"
            android:layout_height="520dp"
            android:layout_marginTop="28dp"
            android:background="@color/background_tertiary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvVerificationSolicitation_Title" />

        <ImageButton
            android:id="@+id/btnVerifyCard_Back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvVerifyCard" />


        <ImageView
            android:id="@+id/ivVerifyCard_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="224dp"
            android:background="@drawable/photo_profile_card_verify"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvVerifyCard_Nickname"
            style="@style/textViewSubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="NIckname"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvVerifyCard"
            app:layout_constraintTop_toBottomOf="@+id/ivVerifyCard_Image" />

        <TextView
            android:id="@+id/tvVerifyCard_UserNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Gusttavo Lima "
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvVerifyCard"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyCard_Nickname" />

        <TextView
            android:id="@+id/tvVerifyCard_Name"
            style="@style/textViewSubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Nome Completo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvVerifyCard"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyCard_UserNickname" />

        <TextView
            android:id="@+id/tvVerifyCard_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Nivaldo Batista "
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvVerifyCard"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyCard_Name" />

        <TextView
            android:id="@+id/tvVerifyCard_Justification"
            style="@style/textViewSubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Motivo para a verificação"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvVerifyCard"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyCard_UserName" />

        <TextView
            android:id="@+id/tvVerifyCard_UserJustification"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Gusttavo Lima, nome artístico de Nivaldo Batista Lima (Presidente Olegário, 3 de setembro de 1989),
            é um cantor, compositor, produtor musical e empresário brasileiro, um dos nomes de maior repercussão e influência na música brasileira."
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tvVerifyCard"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyCard_Justification" />

        <TextView
            android:id="@+id/tvVerifyCard_Identity"
            style="@style/textViewSubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="Identidade:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvVerifyCard"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyCard_UserJustification" />

        <TextView
            android:id="@+id/tvVerifyCard_UserIdentity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Ver Imagem"
            android:textStyle="italic"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tvVerifyCard_Identity"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyCard_UserJustification" />

        <Button
            android:id="@+id/btnVerifyCard_Accept"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_purple"
            android:text="Aceitar"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tvVerifyCard"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyCard_Identity" />

        <Button
            android:id="@+id/btnVerifyCard_Reject"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_red"
            android:text="Rejeitar"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/btnVerifyCard_Accept"
            app:layout_constraintTop_toBottomOf="@+id/tvVerifyCard_Identity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>