<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    style="@style/cardsView"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivCardEvent_PhotoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_photo_profile_card_event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCardSolicitation_Nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="250dp"
            android:text="Neymar Jr"
            style="@style/textViewName"
            app:layout_constraintStart_toEndOf="@+id/ivCardEvent_PhotoPerfil"
            app:layout_constraintTop_toTopOf="@+id/ivCardEvent_PhotoPerfil" />

        <TextView
            android:id="@+id/tvCardSolicitation_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:maxHeight="20dp"
            style="@style/textViewSubNamePurple"
            android:layout_marginTop="5dp"
            android:text="Artista"
            app:layout_constraintStart_toStartOf="@+id/tvCardSolicitation_Nickname"
            app:layout_constraintTop_toBottomOf="@+id/tvCardSolicitation_Nickname" />


        <TextView
            android:id="@+id/tvCardSolicitation_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="95dp"
            android:maxHeight="20dp"
            style="@style/textViewNamePurple"
            android:text="14/04/2022"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCardSolicitation_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="230dp"
            android:maxHeight="90dp"
            android:text="Considerado o principal futebolista brasileiro da
            atualidade e um dos melhores teste dos melhores teste dos melhores teste dos melhores."
            style="@style/textViewSubName"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ivCardEvent_PhotoPerfil" />

        <Button
            android:id="@+id/btnCardSolicitation"
                android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/seeSolicitation"
            style="@style/buttonSave"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>