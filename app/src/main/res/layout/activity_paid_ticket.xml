<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".UI.event.purchase.PaidTicketActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:paddingBottom="40dp"
        android:scrollbars="vertical">

        <ImageButton
            android:id="@+id/btnAboutVerification_Back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/background_primary"
            android:src="@drawable/ic_baseline_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_logo_text" />


        <!--  NICKNAME  -->

        <TextView
            android:id="@+id/tvPaidTicket_Title"
            style="@style/textViewTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ingresso pago"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/tvPaidTicket_TicketTitle"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Título do ingresso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPaidTicket_Title" />


        <EditText
            android:id="@+id/etPaidTicket_TicketTitle"
            style="@style/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvPaidTicket_TicketTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvPaidTicket_TicketTitle" />

        <TextView
            android:id="@+id/tvPaidTicket_Qtdd"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Quantidade"
            app:layout_constraintStart_toStartOf="@+id/tvPaidTicket_TicketTitle"
            app:layout_constraintTop_toBottomOf="@+id/etPaidTicket_TicketTitle" />

        <EditText
            android:id="@+id/etPaidTicket_Qtdd"
            style="@style/editTextText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etPaidTicket_TicketTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvPaidTicket_Qtdd" />

        <TextView
            android:id="@+id/tvPaidTicket_Price"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço"
            app:layout_constraintStart_toStartOf="@+id/etPaidTicket_Price"
            app:layout_constraintTop_toTopOf="@+id/tvPaidTicket_Qtdd" />

        <EditText
            android:id="@+id/etPaidTicket_Price"
            style="@style/editTextText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"

            app:layout_constraintEnd_toEndOf="@+id/etPaidTicket_TicketTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvPaidTicket_Price"
            />
<!--        android:background="@drawable/border_purple_shape"-->
<!--        android:enabled="false"-->
<!--        android:text="GRÁTIS"-->
<!--        android:textAlignment="center"-->

        <TextView
            android:id="@+id/tvPaidTicket_Description"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Descrição"
            app:layout_constraintStart_toStartOf="@+id/tvPaidTicket_Qtdd"
            app:layout_constraintTop_toBottomOf="@+id/etPaidTicket_Qtdd" />

        <EditText
            android:id="@+id/etPaidTicket_Description"
            style="@style/editTextText"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPaidTicket_Description"
            />

        <Switch
            android:id="@+id/switchPaidTicket_HalfTicket"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:checked="False"
            android:text="Criar meia entrada para esse ingresso"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toStartOf="@+id/etPaidTicket_Description"
            app:layout_constraintTop_toBottomOf="@+id/etPaidTicket_Description" />

        <TextView
            android:id="@+id/tvPaidTicket_HalfTicketTitle"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Título da meia entrada"
            app:layout_constraintStart_toStartOf="@+id/switchPaidTicket_HalfTicket"
            app:layout_constraintTop_toBottomOf="@+id/switchPaidTicket_HalfTicket" />


        <EditText
            android:id="@+id/etPaidTicket_HalfTicketTitle"
            style="@style/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/etPaidTicket_Description"
            app:layout_constraintTop_toBottomOf="@+id/tvPaidTicket_HalfTicketTitle" />

        <TextView
            android:id="@+id/tvPaidTicket_HalfQtdd"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Quantidade"
            app:layout_constraintStart_toStartOf="@+id/tvPaidTicket_HalfTicketTitle"
            app:layout_constraintTop_toBottomOf="@+id/etPaidTicket_HalfTicketTitle" />

        <EditText
            android:id="@+id/etPaidTicket_HalfQtdd"
            style="@style/editTextText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/etPaidTicket_HalfTicketTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvPaidTicket_HalfQtdd" />

        <TextView
            android:id="@+id/tvPaidTicket_HalfPrice"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço"
            app:layout_constraintStart_toStartOf="@+id/etPaidTicket_HalfPrice"
            app:layout_constraintTop_toTopOf="@+id/tvPaidTicket_HalfQtdd" />

        <EditText
            android:id="@+id/etPaidTicket_HalfPrice"
            style="@style/editTextText"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/etPaidTicket_HalfTicketTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvPaidTicket_HalfPrice" />

        <TextView
            android:id="@+id/tvPaidTicket_HalfDescription"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Descrição"
            app:layout_constraintStart_toStartOf="@+id/tvPaidTicket_HalfQtdd"
            app:layout_constraintTop_toBottomOf="@+id/etPaidTicket_HalfQtdd" />

        <EditText
            android:id="@+id/etPaidTicket_HalfDescription"
            style="@style/editTextText"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tvPaidTicket_HalfDescription"
             />

        <Button
            android:id="@+id/btnPaidTicket_Finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_gradient"
            android:text="Concluir"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/etPaidTicket_HalfDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>