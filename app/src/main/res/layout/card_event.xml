<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:backgroundTint="@color/background_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivCardEvent_Company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/photo_profile_card_event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtLivroTituloCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxWidth="250dp"
            android:text="Festa neon"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivCardEvent_Company"
            app:layout_constraintTop_toTopOf="@+id/ivCardEvent_Company" />

        <TextView
            android:id="@+id/tvCardEvent_Company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="AUDIO_EVENTOS"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txtLivroTituloCardView"
            app:layout_constraintTop_toBottomOf="@+id/txtLivroTituloCardView" />

        <TextView
            android:id="@+id/tvCardEvent_EventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="Show"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvCardEvent_Company"
            app:layout_constraintTop_toBottomOf="@+id/tvCardEvent_Company" />


        <ImageView
            android:id="@+id/ivCardEvent_person1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/photo_profile_card_event"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
             />

        <ImageView
            android:id="@+id/ivCardEvent_person2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-15dp"
            android:background="@drawable/photo_profile_card_event"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivCardEvent_person1"
             />

        <ImageView
            android:id="@+id/ivCardEvent_Cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-15dp"
            android:background="@drawable/photo_profile_card_event"
            android:backgroundTint="@color/purple_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivCardEvent_person2"
             />

        <TextView
            android:id="@+id/tvCardEvent_TitleAtractions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="Atrações principais"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivCardEvent_Favorite"
            app:layout_constraintEnd_toStartOf="@+id/ivCardEvent_Favorite"
            app:layout_constraintStart_toEndOf="@+id/ivCardEvent_Cover"
            app:layout_constraintTop_toTopOf="@+id/ivCardEvent_Favorite"
            app:layout_constraintVertical_bias="0.235" />

        <TextView
            android:id="@+id/tvCardEvent_Atractions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="DJ Sharon"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivCardEvent_Favorite"
            app:layout_constraintEnd_toEndOf="@+id/tvCardEvent_TitleAtractions"
            app:layout_constraintStart_toStartOf="@+id/tvCardEvent_TitleAtractions"
            app:layout_constraintTop_toBottomOf="@+id/tvCardEvent_TitleAtractions"
             />

        <ImageView
            android:id="@+id/ivCardEvent_Favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/heart_shape"
            android:src="@drawable/ic_baseline_favorite_border"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>