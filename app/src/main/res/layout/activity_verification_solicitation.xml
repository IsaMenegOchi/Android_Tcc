<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".UI.adm.VerificationSolicitationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:scrollbars="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_logo_text" />

        <TextView
            android:id="@+id/tvVerificationSolicitation_Title"
            style="@style/textViewTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Solicitações de verificação"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/btnVerificationSolicitation_companyFilter"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:text="Empresas"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tvVerificationSolicitation_Title"
            app:layout_constraintTop_toBottomOf="@+id/tvVerificationSolicitation_Title" />

        <Button
            android:id="@+id/btnVerificationSolicitation_UserFilter"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:text="Artistas"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tvVerificationSolicitation_Title"
            app:layout_constraintStart_toEndOf="@+id/btnVerificationSolicitation_companyFilter"
            app:layout_constraintTop_toTopOf="@+id/btnVerificationSolicitation_companyFilter" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

