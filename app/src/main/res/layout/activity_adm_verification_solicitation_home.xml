<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".UI.adm.VerificationSolicitationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/imageViewAfterLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvAdmVerificationSolicitation_Title"
            style="@style/textViewTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/verificationSolicitation"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/btnAdmVerificationSolicitation_companyFilter"
            style="@style/textViewSubTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:text="@string/company"
            app:layout_constraintStart_toStartOf="@+id/tvAdmVerificationSolicitation_Title"
            app:layout_constraintTop_toBottomOf="@+id/tvAdmVerificationSolicitation_Title" />

        <TextView
            android:id="@+id/btnAdmVerificationSolicitation_UserFilter"
            style="@style/textViewSubTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="@string/user"
            app:layout_constraintBottom_toBottomOf="@+id/btnAdmVerificationSolicitation_companyFilter"
            app:layout_constraintStart_toEndOf="@+id/btnAdmVerificationSolicitation_companyFilter"
            app:layout_constraintTop_toTopOf="@+id/btnAdmVerificationSolicitation_companyFilter" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcAdmVerificationSolicitation_Cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAdmVerificationSolicitation_companyFilter" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

