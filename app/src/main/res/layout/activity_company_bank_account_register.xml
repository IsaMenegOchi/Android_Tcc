<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".UI.company.company_register.bank_account.BankAccountRegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/imageView"
            style="@style/imageViewAfterLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRegister"
            style="@style/textViewTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="CADASTRO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/tvAccount"
            style="@style/textViewSubTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Conta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRegister" />

        <TextView
            android:id="@+id/tvRegisterBankAccount_Bank"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Banco"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAccount" />


        <EditText
            android:id="@+id/etRegisterBankAccount_Bank"
            style="@style/editTextText"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tvRegisterBankAccount_Bank"
            app:layout_constraintTop_toBottomOf="@+id/tvRegisterBankAccount_Bank" />

        <TextView
            android:id="@+id/tvRegisterBankAccount_Agency"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agência"
            app:layout_constraintStart_toStartOf="@+id/etRegisterBankAccount_Agency"
            app:layout_constraintTop_toTopOf="@+id/tvRegisterBankAccount_Bank" />

        <EditText
            android:id="@+id/etRegisterBankAccount_Agency"
            style="@style/editTextText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/etRegisterBankAccount_Bank"
            app:layout_constraintTop_toBottomOf="@+id/tvRegisterBankAccount_Agency" />

        <TextView
            android:id="@+id/tvRegisterBankAccount_Account"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Conta"
            app:layout_constraintStart_toStartOf="@+id/etRegisterBankAccount_Bank"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterBankAccount_Bank" />


        <EditText
            android:id="@+id/etRegisterBankAccount_Account"
            style="@style/editTextText"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/etRegisterBankAccount_Bank"
            app:layout_constraintStart_toStartOf="@+id/tvRegisterBankAccount_Account"
            app:layout_constraintTop_toBottomOf="@+id/tvRegisterBankAccount_Account" />

        <TextView
            android:id="@+id/tvRegisterBankAccount_Digit"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dígito"
            app:layout_constraintStart_toStartOf="@+id/tvRegisterBankAccount_Agency"
            app:layout_constraintTop_toTopOf="@+id/tvRegisterBankAccount_Account" />


        <EditText
            android:id="@+id/etRegisterBankAccount_Digit"
            style="@style/editTextText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/etRegisterBankAccount_Agency"
            app:layout_constraintTop_toBottomOf="@+id/tvRegisterBankAccount_Digit" />

        <TextView
            android:id="@+id/tvRegisterBankAccount_TypeOfAccount"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tipo de conta"
            app:layout_constraintStart_toStartOf="@+id/etRegisterBankAccount_Account"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterBankAccount_Account" />

        <EditText
            android:id="@+id/etRegisterBankAccount_TypeOfAccount"
            style="@style/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/etRegisterBankAccount_Digit"
            app:layout_constraintStart_toStartOf="@+id/tvRegisterBankAccount_TypeOfAccount"
            app:layout_constraintTop_toBottomOf="@+id/tvRegisterBankAccount_TypeOfAccount" />

        <Button
            android:id="@+id/btnBankAccountRegister"
            style="@style/buttonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="Cadastrar"
            app:layout_constraintEnd_toEndOf="@+id/etRegisterBankAccount_TypeOfAccount"
            app:layout_constraintStart_toStartOf="@+id/etRegisterBankAccount_TypeOfAccount"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterBankAccount_TypeOfAccount" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>