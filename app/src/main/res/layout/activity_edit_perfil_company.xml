<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".UI.company.EditPerfilCompanyActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/ivEditPerfilCompany_Wallpaper"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/background_tertiary"
                android:paddingTop="20dp"
                android:paddingEnd="300dp"
                android:paddingBottom="70dp"
                android:src="@drawable/ic_outline_add_a_photo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivEditPerfilCompany_Photo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="-65dp"
                android:background="@drawable/perfil_photo_shape"
                android:padding="35dp"
                android:src="@drawable/ic_outline_add_a_photo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivEditPerfilCompany_Wallpaper" />

            <Button
                android:id="@+id/btnEditPerfilCompany_EditPhoto"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:text="Trocar Foto"
                android:textColor="@color/white"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/ivEditPerfilCompany_Photo"
                app:layout_constraintTop_toBottomOf="@+id/ivEditPerfilCompany_Photo" />

            <Button
                android:id="@+id/btnEditPerfilCompany_EditWallpaper"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:text="Trocar Fundo"
                android:textColor="@color/white"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivEditPerfilCompany_Wallpaper"
                app:layout_constraintEnd_toEndOf="@+id/ivEditPerfilCompany_Wallpaper" />

            <TextView
                android:id="@+id/ivEditPerfilCompany_Title"
                style="@style/textViewTitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.02"
                android:text="Editar Perfil"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnEditPerfilCompany_EditPhoto" />

            <TextView
                android:id="@+id/tvEditPerfilCompany_Nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:letterSpacing="0.075"
                android:text="Nickname"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivEditPerfilCompany_Title" />

            <EditText
                android:id="@+id/etEditPerfilCompany_UserNickname"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/text_color"
                app:layout_constraintStart_toStartOf="@+id/tvEditPerfilCompany_Nickname"
                app:layout_constraintTop_toBottomOf="@+id/tvEditPerfilCompany_Nickname" />

            <TextView
                android:id="@+id/tvEditPerfilCompany_Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.075"
                android:text="Biografia"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/etEditPerfilCompany_UserNickname"
                app:layout_constraintTop_toBottomOf="@+id/etEditPerfilCompany_UserNickname" />

            <EditText
                android:id="@+id/etEditPerfilCompany_UserDescription"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/text_color"
                app:layout_constraintStart_toStartOf="@+id/tvEditPerfilCompany_Description"
                app:layout_constraintTop_toBottomOf="@+id/tvEditPerfilCompany_Description" />

            <TextView
                android:id="@+id/tvEditPerfilCompany_Cpnj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.075"
                android:text="CNPJ"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/etEditPerfilCompany_UserDescription"
                app:layout_constraintTop_toBottomOf="@+id/etEditPerfilCompany_UserDescription" />

            <EditText
                android:id="@+id/etEditPerfilCompany_UserName"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"

                android:drawableRight="@drawable/ic_baseline_lock"
                android:textColor="@color/text_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEditPerfilCompany_Cpnj" />

            <TextView
                android:id="@+id/tvEditPerfilCompany_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.075"
                android:text="Email"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/etEditPerfilCompany_UserName"
                app:layout_constraintTop_toBottomOf="@+id/etEditPerfilCompany_UserName" />

            <EditText
                android:id="@+id/etEditPerfilCompany_UserEmail"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/text_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEditPerfilCompany_Email" />

            <TextView
                android:id="@+id/tvEditPerfilCompany_Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:letterSpacing="0.075"
                android:text="Senha"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/etEditPerfilCompany_UserEmail"
                app:layout_constraintTop_toBottomOf="@+id/etEditPerfilCompany_UserEmail" />


            <EditText
                android:id="@+id/etEditPerfilCompany_UserPassword"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/text_color"
                android:drawableRight="@drawable/ic_baseline_visibility_off_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEditPerfilCompany_Password" />

            <TextView
                android:id="@+id/tvEditPerfilCompany_Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:letterSpacing="0.075"
                android:text="Conta Padrão"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/etEditPerfilCompany_UserPassword"
                app:layout_constraintTop_toBottomOf="@+id/etEditPerfilCompany_UserPassword" />

            <EditText
                android:id="@+id/etEditPerfilCompany_UserAccount"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/text_color"
                android:drawableRight="@drawable/ic_baseline_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.078"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEditPerfilCompany_Account" />


            <Button
                android:id="@+id/btnEditPerfilCompany_AddAccount"
                android:layout_width="49dp"
                android:layout_height="43dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@color/background_tertiary"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/etEditPerfilCompany_UserAccount"
                app:layout_constraintTop_toBottomOf="@+id/tvEditPerfilCompany_Account" />

            <Button
               android:id="@+id/btnEditPerfilCompany_Cancel"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_red"
               android:text="Cancelar"
               android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEditPerfilCompany_UserAccount" />

            <Button
                android:id="@+id/btnEditPerfilCompany_Save"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_purple"
                android:text="Salvar"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/btnEditPerfilCompany_Cancel"
                app:layout_constraintTop_toBottomOf="@+id/etEditPerfilCompany_UserAccount" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

