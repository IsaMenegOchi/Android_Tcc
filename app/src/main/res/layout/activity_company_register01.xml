<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".UI.company.company_register.CompanyRegisterActivity01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:scrollbars="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/imageViewAfterLogo"
        />

        <TextView
            android:id="@+id/tvRegister"
            style="@style/textViewTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_gravity="center"
            android:text="CADASTRO"
             />

        <TextView
            android:id="@+id/tvCompanyRegister_Nickname"
            style="@style/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Nickname"
            />

        <EditText
        android:id="@+id/etCompanyRegister_Nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/editTextText"
         />

    <!-- CNPJ -->

        <TextView
            android:id="@+id/tvCompanyRegister_Cnpj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/textViewName"
            android:text="CNPJ"
             />

        <EditText
            android:id="@+id/etCompanyRegister_Cnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/editTextText"
             />


    <!--  EMAIL  -->
        <TextView
            android:id="@+id/tvCompanyRegister_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/textViewName"
            android:text="Email"
            />

        <EditText
            android:id="@+id/etCompanyRegister_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/editTextText"
            />

    <!--    Confirmação de email    -->

        <TextView
            android:id="@+id/tvCompanyRegister_ConfEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/textViewName"
            android:text="Confirme seu email"
            />

        <EditText
            android:id="@+id/etCompanyRegister_ConfEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/editTextText"
            />



        <Button
            android:id="@+id/btnCompanyRegister_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            style="@style/buttonText"
            android:text="Avançar"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/haveAccount"
                style="@style/textViewSubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Já tem uma conta?"
                />

            <TextView
                android:id="@+id/tvCompanyRegister_LoginPerfil"
                style="@style/textViewSubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Conecte-se agora!"
                android:textColor="@color/purple_secondary"
                 />

        </LinearLayout>

    </LinearLayout>

</ScrollView>