<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryDark">@color/background_primary</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>

    <style name="textViewTitles">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="textViewName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="textViewSubName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textViewPurpleSubName">
        <item name="android:textColor">@color/purple_quaternary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="editTextText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="editTextPassword">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:inputType">text</item>
    </style>


</resources>